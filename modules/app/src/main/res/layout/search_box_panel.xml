<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LauncherSearchDrawerPanel"
    android:id="@+id/launcher_search_box_panel">

    <com.fortysevendeg.ninecardslauncher.app.ui.components.widgets.TintableImageView
        android:id="@+id/launcher_header_icon"
        style="@style/LauncherSearchHeader" />

    <ImageView style="@style/LauncherSearchHeaderLine"/>

    <EditText
        style="@style/LauncherSearchEditText"
        android:id="@+id/launcher_search_box_text"/>

    <com.fortysevendeg.ninecardslauncher.app.ui.components.widgets.TintableImageView
        style="@style/LauncherSearchIcon"
        android:id="@+id/launcher_search_box_icon"/>

</LinearLayout>