<resources>

    <style name="LauncherDrawerParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/background_dialog</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="LauncherDrawerContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_search_box</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">@dimen/padding_default</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="LauncherDrawerInnerContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="LauncherDrawerMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_xlarge</item>
    </style>

    <style name="LauncherDrawerRecycler">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LauncherDrawerLoading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="LauncherDrawerFabButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_app_drawer_fab_button</item>
        <item name="android:layout_marginRight">@dimen/margin_app_drawer_fab_button</item>
        <item name="android:layout_gravity">bottom|right</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">@dimen/elevation_fab_button</item>
        <item name="pressedTranslationZ">@dimen/elevation_fab_button_pressed</item>
        <item name="backgroundTint">@color/drawer_fab_button</item>
        <item name="rippleColor">@color/drawer_fab_button_ripple</item>
    </style>

    <!-- Animated View -->

    <style name="LauncherDrawerAnimatedContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LauncherDrawerAnimatedRipple">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LauncherDrawerAnimatedIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">@dimen/padding_large</item>
        <item name="android:padding">@dimen/padding_large</item>
    </style>

</resources>