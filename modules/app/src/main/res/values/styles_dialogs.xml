<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Dialog Contact Info Header -->

    <style name="ContactInfoHeaderRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_height</item>
    </style>

    <style name="ContactInfoHeaderAvatar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ContactInfoHeaderContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">bottom</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:background">@color/background_header_content</item>
    </style>

    <style name="ContactInfoHeaderName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_xxxxlarge</item>
        <item name="android:textColor">@color/text_dialog_name</item>
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>

    <!-- Dialog Contact Info -->

    <style name="DialogContactInfoRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="DialogContactInfoValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/text_item_value</item>
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>

    <style name="DialogContactInfoCategory">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/text_item_category</item>
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>

    <style name="DialogContactInfoLineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_default</item>
        <item name="android:background">@color/divider_color_info_dialog</item>
        <item name="android:layout_marginLeft">@dimen/size_icon_contact_dialog</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <!-- Dialog Contact Info General -->

    <style name="DialogContactInfoGeneralContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/padding_xlarge</item>
        <item name="android:paddingBottom">@dimen/padding_xlarge</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="DialogContactInfoContentGeneralIcon">
        <item name="android:layout_width">@dimen/size_icon_contact_dialog</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DialogContactInfoGeneralIcon">
        <item name="android:layout_width">@dimen/size_icon_contact_small</item>
        <item name="android:layout_height">@dimen/size_icon_contact_small</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="DialogContactInfoGeneralContentValues">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Dialog Contact Info Phone -->

    <style name="DialogContactInfoContentValues">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="DialogContactInfoPhoneContent">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/padding_default</item>
        <item name="android:paddingBottom">@dimen/padding_default</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="DialogContactInfoPhoneIcon">
        <item name="android:layout_width">@dimen/size_icon_contact_dialog</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/dialog_contact_icon_phone</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="DialogContactInfoPhoneContentValues">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/padding_default</item>
        <item name="android:paddingBottom">@dimen/padding_default</item>
    </style>

    <style name="DialogContactInfoSmsIcon">
        <item name="android:layout_width">@dimen/size_icon_contact_dialog</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/dialog_contact_icon_sms</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- Dialog Contact Info Email -->

    <style name="DialogContactInfoEmailContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/padding_default</item>
        <item name="android:paddingBottom">@dimen/padding_default</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="DialogContactInfoEmailIcon">
        <item name="android:layout_width">@dimen/size_icon_contact_dialog</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/dialog_contact_icon_email</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="DialogContactInfoEmailContentValues">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">@dimen/padding_default</item>
        <item name="android:paddingBottom">@dimen/padding_default</item>
    </style>

    <!-- Dialog Icon Info -->

    <style name="DialogIconInfoRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/padding_large</item>
    </style>

    <style name="DialogIconInfoName">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:drawablePadding">@dimen/padding_large</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="DialogIconInfoSelect">
        <item name="android:layout_width">@dimen/size_icon_select_new_collection</item>
        <item name="android:layout_height">@dimen/size_icon_select_new_collection</item>
    </style>

    <!-- Dialog Color Info -->

    <style name="DialogColorInfoRoot">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="DialogColorInfoImage">
        <item name="android:layout_width">@dimen/size_icon_color_dialog</item>
        <item name="android:layout_height">@dimen/size_icon_color_dialog</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- ListPopupMenu -->

    <style name="ListPopupMenuText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/item_list_popup_menu</item>
    </style>

    <!-- Dialog Publish Collection Wizard  -->

    <style name="PublishCollectionWizardRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="PublishCollectionWizardDialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="PublishCollectionWizardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/padding_xlarge</item>
        <item name="android:paddingLeft">@dimen/padding_xlarge</item>
        <item name="android:paddingRight">@dimen/padding_xlarge</item>
    </style>

    <style name="PublishCollectionWizardHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/padding_default</item>
        <item name="android:textSize">@dimen/text_xxlarge</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="PublishCollectionWizardStartHeader" parent="PublishCollectionWizardHeader">
        <item name="android:text">@string/publishCollectionHeader</item>
    </style>

    <style name="PublishCollectionWizardInformationHeader" parent="PublishCollectionWizardHeader">
        <item name="android:text">@string/addInformationHeader</item>
    </style>

    <style name="PublishCollectionWizardPublishingHeader" parent="PublishCollectionWizardHeader">
        <item name="android:text">@string/publishingHeader</item>
    </style>

    <style name="PublishCollectionWizardEndHeader" parent="PublishCollectionWizardHeader">
        <item name="android:text">@string/congratulationsHeader</item>
    </style>

    <style name="PublishCollectionWizardMessage">
        <item name="android:layout_width">@dimen/publish_collection_message_width</item>
        <item name="android:layout_height">@dimen/publish_collection_message_height</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PublishCollectionWizardStartMessage" parent="PublishCollectionWizardMessage">
        <item name="android:text">@string/publishCollectionMessage</item>
    </style>

    <style name="PublishCollectionWizardInformationMessage" parent="PublishCollectionWizardMessage">
        <item name="android:text">@string/addInformationMessage</item>
    </style>

    <style name="PublishCollectionWizardPublishingMessage" parent="PublishCollectionWizardMessage">
        <item name="android:text">@string/publishingMessage</item>
    </style>

    <style name="PublishCollectionWizardEndMessage" parent="PublishCollectionWizardMessage">
        <item name="android:text">@string/congratulationsMessage</item>
    </style>

    <style name="PublishCollectionWizardImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">@dimen/padding_large</item>
    </style>

    <style name="PublishCollectionWizardImageStart" parent="PublishCollectionWizardImage">
        <item name="android:src">@drawable/publish_collection_wizard_start</item>
    </style>

    <style name="PublishCollectionWizardImageEnd" parent="PublishCollectionWizardImage">
        <item name="android:src">@drawable/publish_collection_wizard_end</item>
    </style>

    <style name="PublishCollectionWizardInformationScroll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="PublishCollectionWizardInformationScrollContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="PublishCollectionWizardInformationForm" parent="PublishCollectionWizardImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/publish_collection_form_height</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/publish_collection_form_padding</item>
    </style>

    <style name="PublishCollectionWizardInformationInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/publish_collection_input_margin_top</item>
    </style>

    <style name="PublishCollectionWizardInformationInputMessage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="PublishCollectionWizardInformationCollectionNameInputMessage" parent="PublishCollectionWizardInformationInputMessage">
        <item name="android:hint">@string/addInformationcollectionName</item>
    </style>

    <style name="PublishCollectionWizardInformationDescriptionInputMessage" parent="PublishCollectionWizardInformationInputMessage">
        <item name="android:hint">@string/addInformationDescription</item>
    </style>

    <style name="PublishCollectionWizardInformationCategorySelectContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/publish_collection_category_padding</item>
        <item name="android:paddingRight">@dimen/publish_collection_category_padding</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="PublishCollectionWizardInformationCategorySpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_marginTop">@dimen/publish_collection_input_category_margin_top</item>
    </style>

    <style name="PublishCollectionWizardInformationLineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_wide</item>
        <item name="android:background">@color/divider_category_color</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="PublishCollectionWizardLoadingContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/publish_collection_form_height</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PublishingLoading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="PublishCollectionWizardStepsPaginationPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/publish_collection_footer_height</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="PublishCollectionWizardFooter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/publish_collection_footer_height</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="PublishCollectionWizardStartFooter" parent="PublishCollectionWizardFooter">
        <item name="android:gravity">right</item>
    </style>

    <style name="PublishCollectionWizardInformationFooter" parent="PublishCollectionWizardFooter">
        <item name="android:gravity">right</item>
    </style>

    <style name="PublishCollectionWizardEndFooter" parent="PublishCollectionWizardFooter">
        <item name="android:layout_marginTop">@dimen/publish_collection_footer_end_margin</item>
        <item name="android:layout_height">@dimen/publish_collection_footer_end_height</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="PublishCollectionWizardStartArrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:src">@drawable/publish_collection_wizard_arrow</item>
    </style>

    <style name="PublishCollectionWizardInformationButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/footer_text_color</item>
        <item name="android:text">@string/publishAction</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="PublishCollectionWizardEndLineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_default</item>
        <item name="android:background">@color/divider_color_info_dialog</item>
        <item name="android:layout_gravity">top</item>
    </style>

    <style name="PublishCollectionWizardEndButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/footer_text_color</item>
        <item name="android:text">@string/shareCollection</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

</resources>